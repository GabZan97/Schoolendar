<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/event_card_height"
    android:layout_marginBottom="@dimen/card_vertical_spacing"

    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:paddingEnd="@dimen/activity_margin"

    android:paddingStart="@dimen/activity_margin">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <!-- Event Title -->
        <TextView
            android:id="@+id/event_card_title"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"

            android:maxLines="1"
            android:theme="@style/NormalText" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <!-- Event Date -->
        <TextView
            android:id="@+id/event_card_type_subject"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"

            android:maxLines="1"
            android:theme="@style/SubtitleText" />

        <!-- Event Subject plus Type -->
        <TextView
            android:id="@+id/event_card_date"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"

            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:theme="@style/SubtitleText" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
