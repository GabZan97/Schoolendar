<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Grey Rectangle for Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/soft_grey"/>
            <corners android:radius="@dimen/card_elevation" />
        </shape>
    </item>

    <!-- Colored Left Border -->
    <item
        android:id="@+id/left_coloured_border"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="@dimen/card_elevation">

        <shape android:shape="rectangle" >
            <solid android:color="@color/blue"/>
            <corners
                android:radius="@dimen/card_elevation" />
        </shape>
    </item>

    <!-- White Rectangle Shifted for 10dp to the right -->
    <item
        android:left="10dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="@dimen/card_elevation">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners
                android:bottomRightRadius="@dimen/card_elevation"
                android:topRightRadius="@dimen/card_elevation"/>
        </shape>
    </item>


</layer-list>